SVGR
```
library(svgR)
WH<-c(48,32)
xy<-c(.2,.2)*WH
wwh<-c(.6,.6)*WH
m<-c('M',xy)
dz<-wwh[2]/2
dx<-wwh[1]-dz
polyPortion<-c('l', dx,0,  dz,dz, -dz,dz, -dx, 0 )
d<-c(m, polyPortion, 'Z')

 
    m<-c('M',xy+c(dz,0))
    polyPortion<-c('l', dx,0,  0,2*dz, -dx, 0 )
    arcPortion<-c('a', c(dz,dz), 180, 1,1, c(0, -2*dz))
    d<-c(m, polyPortion, arcPortion)
svgR(wh=WH, stroke.width=2, stroke="#00FFFF",  fill="none",
    g(
        path(d=d ),
        text(cxy=xy+wwh/2, "O")
    )
)
